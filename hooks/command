#!/bin/bash

echo "--- :trivy: Scan for vulnerabilities"
docker run -v ${BUILDKITE_PLUGIN_BUILDKITE_TRIVY_PLUGIN_MOUNT} ${BUILDKITE_PLUGIN_BUILDKITE_TRIVY_PLUGIN_TRIVY_IMAGE}:${BUILDKITE_PLUGIN_BUILDKITE_TRIVY_PLUGIN_TRIVY_VERSION} ${BUILDKITE_PLUGIN_BUILDKITE_TRIVY_PLUGIN_SCAN_TYPE} --severity ${BUILDKITE_PLUGIN_BUILDKITE_TRIVY_PLUGIN_SEVERITY} --vuln-type {BUILDKITE_PLUGIN_BUILDKITE_TRIVY_PLUGIN_VULN_TYPE} --format ${BUILDKITE_PLUGIN_BUILDKITE_TRIVY_PLUGIN_FORMAT} ${BUILDKITE_PLUGIN_BUILDKITE_TRIVY_PLUGIN_TARGET_IMAGE}
   
